# ===============================
# Database (Prisma / Turso)
# ===============================

DATABASE_URL=libsql://<your-database>.turso.io
DATABASE_AUTH_TOKEN=<turso-auth-token>

# ===============================
# Solana / RPC
# ===============================

# Helius RPC endpoint (required for on-chain reads)
HELIUS_API_URL=https://mainnet.helius-rpc.com/?api-key=<helius-api-key>

# RPC proxy used by the frontend
NEXT_PUBLIC_RPC_PROXY_URL=http://localhost:3000/api/rpc

# ===============================
# Encryption
# ===============================

# Master key used to encrypt private access tokens / payloads
# Must be 32 bytes base64
MASTER_ENCRYPTION_KEY=<base64-32-bytes-key>

# ===============================
# Google Docs verification
# ===============================

# Base64-encoded Google Service Account JSON
# This is a PRIVATE backend secret owned by PrivateLink.
# Users only need to share their Google Doc with the service
# account email as "Reader".
GOOGLE_SERVICE_ACCOUNT_BASE64=__PRIVATE_LINK_BACKEND_SECRET__

# ===============================
# X (Twitter) OAuth
# ===============================

X_CLIENT_ID=<x-client-id>
X_CLIENT_SECRET=<x-client-secret>
X_REDIRECT_URI=http://localhost:3000/api/x/callback

# ===============================
# App
# ===============================

NODE_ENV=development